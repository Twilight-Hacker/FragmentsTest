<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="task.example.galadar.fragmentTest" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="task.example.galadar.fragmentTest.Loader"
            android:label="@string/title_activity_loader"
            android:noHistory="true">
            <intent-filter android:label="@string/Title" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:launchMode="singleTop"
            android:name="task.example.galadar.fragmentTest.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="task.example.galadar.fragmentTest.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName="task.example.galadar.fragmentTest.MainActivity">
        </activity>
    </application>

</manifest>
